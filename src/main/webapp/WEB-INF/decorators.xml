<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/decorators/">
    <decorator name="default" page="default.jsp">
        <excludes>
            <pattern>/nodecorate/*</pattern>
            <pattern>/styles/*</pattern>
            <pattern>/assets/*</pattern>
            <pattern>/scripts/*</pattern>
            <pattern>/images/*</pattern>
            <!--<pattern>/index.html</pattern>-->
            <pattern>/META-INF/*</pattern>
            <pattern>/css/*</pattern>
            <pattern>/*.css</pattern>
            <pattern>/rescources/css/*</pattern>
            <pattern>/rescources/fonts/*</pattern>
        </excludes>
        <pattern>/*</pattern>
    </decorator>

    <!--defiing multiple decoraters-->
    <decorator name="login" page="login.jsp">
        <excludes>
            <pattern>/nodecorate/*</pattern>
            <pattern>/styles/*</pattern>
            <pattern>/assets/*</pattern>
            <pattern>/scripts/*</pattern>
            <pattern>/images/*</pattern>
            <!--<pattern>/index.html</pattern>-->
            <pattern>/META-INF/*</pattern>
            <pattern>/css/*</pattern>
            <pattern>/*.css</pattern>
            <pattern>/rescources/fonts/*</pattern>
            <pattern>/rescources/css/*</pattern>
        </excludes>
        <pattern>/</pattern>
        <pattern>/login/signIn</pattern>
        <pattern>/login/signUp</pattern>
        <pattern>/login/forgotPassword</pattern>
        <pattern>/login/sendPasswordMail</pattern>
        <pattern>/403</pattern>
    </decorator>


    <!--defiing multiple decoraters-->
    <!-- For Ajax pages -->
    <decorator name="ajax" page="ajax.jsp">
        <excludes>
            <pattern>/nodecorate/*</pattern>
            <pattern>/styles/*</pattern>
            <pattern>/assets/*</pattern>
            <pattern>/scripts/*</pattern>
            <pattern>/images/*</pattern>
            <!--<pattern>/index.html</pattern>-->
            <pattern>/META-INF/*</pattern>
            <pattern>/css/*</pattern>
            <pattern>/*.css</pattern>
            <pattern>/rescources/fonts/*</pattern>
            <pattern>/rescources/css/*</pattern>

        </excludes>
        <!--Ajax URL is excluded-->
        <pattern>/topic/ajaxList</pattern>
        <pattern>/topic/create</pattern>
        <pattern>/topic/save</pattern>
        <pattern>/subscription/subscribeTopicList</pattern>
        <pattern>/subscription/subscribeTopic</pattern>
        <pattern>/subscription/unSubscribeTopicList</pattern>
        <pattern>/subscription/unSubscribeTopic</pattern>
        <pattern>/user/ajaxDashboard</pattern>
        <pattern>/user/update</pattern>
        <pattern>/user/updateUser</pattern>
        <pattern>/topic/update</pattern>
        <pattern>/topic/updateTopic</pattern>
    </decorator>

</decorators>